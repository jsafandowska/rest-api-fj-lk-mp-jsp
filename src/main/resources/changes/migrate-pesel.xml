<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2024-08-25-jsafandowska-001-add-birthdate-columns" author="krzysiek">
        <addColumn tableName="person">
            <column name="birth_date" type="date"/>
        </addColumn>
    </changeSet>
    <changeSet id="2024-08-25-jsafandowska-002-add-gender-columns" author="krzysiek">
        <addColumn tableName="person">
            <column name="gender" type="varchar(10)"/>
        </addColumn>
    </changeSet>

    <changeSet id="2024-08-25-jsafandowska-003-update-birthdate-and-gender" author="krzysiek">
        <customChange class="pl.kurs.service.PeselConversionTaskChange"/>
    </changeSet>

</databaseChangeLog>